<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MineFieldActivity">

    <RelativeLayout
        android:id="@+id/information_layout"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal">
        <include android:id="@+id/digital_counter"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            layout="@layout/digital_counter_layout" />
        <include android:id="@+id/digital_timer"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_alignParentEnd="true"
            layout="@layout/digital_timer_layout"/>
    </RelativeLayout>

    <GridLayout
        android:id="@+id/mine_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

</LinearLayout>