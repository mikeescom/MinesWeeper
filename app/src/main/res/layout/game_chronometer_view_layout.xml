<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1.8"
    android:background="@color/digital_color_bg">
    <ImageView
        android:id="@+id/tens_minutes"
        android:layout_width="30dp"
        android:layout_height="49dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/zero_digit"/>
    <ImageView
        android:id="@+id/units_minutes"
        android:layout_width="30dp"
        android:layout_height="49dp"
        app:layout_constraintStart_toEndOf="@+id/tens_minutes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/zero_digit"/>
    <ImageView
        android:id="@+id/clock_divider"
        android:layout_width="5dp"
        android:layout_height="49dp"
        app:layout_constraintStart_toEndOf="@+id/units_minutes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/zero_digit"/>
    <ImageView
        android:id="@+id/tens_seconds"
        android:layout_width="30dp"
        android:layout_height="49dp"
        app:layout_constraintStart_toEndOf="@+id/clock_divider"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/zero_digit" />
    <ImageView
        android:id="@+id/units_seconds"
        android:layout_width="30dp"
        android:layout_height="49dp"
        app:layout_constraintStart_toEndOf="@+id/tens_seconds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/zero_digit" />
</androidx.constraintlayout.widget.ConstraintLayout>